			break;
		case R.id.user_lvl_icon:

			break;
		case R.id.mflw_layout:

			break;
		case R.id.zhcz_layout:

			break;
		case R.id.bjda_layout:

			break;
		case R.id.yjfk_layout:

			break;
		default:
			break;
		}
	};

	@Override
	public void onDestroy() {
		super.onDestroy();
	}

	public static MyFragment newInstance() {
		MyFragment fragment = new MyFragment();
		return fragment;
